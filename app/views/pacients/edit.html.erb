<% provide(:title, "Modifica pacient") %>
<h1>Modifica pacient</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@pacient) do |f| %>
      

      <%= f.label :nume %>
      <%= f.text_field :nume %>

      <%= f.label :prenume %>
      <%= f.text_field :prenume %>

     <%= f.label :telefon %>
      <%= f.text_field :telefon %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.submit "Salvează modificări", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>