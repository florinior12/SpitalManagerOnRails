<% provide(:title, 'Adauga Consultatie') %>
<h1>Adauga Consultatie</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@consult) do |f| %>
      <%= f.label :medic_id %>
      <%= f.select :medic_id, Medic.all.collect {|m| m.id.to_s + ' '+ m.nume + ' ' + m.prenume} %>

      <%= f.label :pacient_id %>
      <%= f.select :pacient_id, Pacient.all.collect {|p| p.id.to_s + ' '+ p.nume + ' ' + p.prenume} %>

      <%= f.label :diagnostic %>
      <%= f.text_field :diagnostic %>
      
      <%= f.label :data %>
      <%= f.date_field :data %>
      

      <%= f.submit "Adauga", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>