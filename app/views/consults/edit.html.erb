<% provide(:title, "Modifica consultatie") %>
<h1>Modifica o consultatie</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@consult) do |f| %>
      <%= f.label :medic_id %>
      <%= f.select :medic_id, Medic.all.collect {|m| m.id.to_s + ' '+ m.nume + ' ' + m.prenume}, :selected => 
      Medic.find(Consult.find(params[:id]).medic_id).id.to_s + ' '+ 
      Medic.find(Consult.find(params[:id]).medic_id).nume + ' ' + 
      Medic.find(Consult.find(params[:id]).medic_id).prenume %>
      
      <%= f.label :pacient_id %>
      <%= f.select :pacient_id, Pacient.all.collect {|p| p.id.to_s + ' '+ p.nume + ' ' + p.prenume}, :selected => 
      Pacient.find(Consult.find(params[:id]).pacient_id).id.to_s + ' '+ 
      Pacient.find(Consult.find(params[:id]).pacient_id).nume + ' ' + 
      Pacient.find(Consult.find(params[:id]).pacient_id).prenume  %>

      <%= f.label :diagnostic %>
      <%= f.text_field :diagnostic %>
      
      <%= f.label :data %>
      <%= f.date_field :data %>

      <%= f.submit "Salveaza modificari", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>